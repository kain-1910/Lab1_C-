@{
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
@section ChangeColorTable{
    <script>
        const table = document.querySelector("table");
        var isClick = false;
        table.addEventListener("click",() => {
            isClick = !isClick;
            if(isClick) {
            table.style.background = "blue";
            }
            else{
                table.style.background = "white";
            }
        })
        
    </script>
}
@model IEnumerable<Student>
<a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create Student</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Mã</th>
      <th scope="col">Họ tên</th>
      <th scope="col">Ngày sinh</th>
      <th scope="col">Ngành</th>
      <th scope="col">Giới tính</th>
      <th scope="col">Địa chỉ</th>
      <th scope="col">Email</th>
      <th scope="col">Điểm TB</th>
    </tr>
  </thead>
  <tbody>
        @foreach(var student in Model)
        {
            <tr>
              <th scope="row">@student.Id</th>
              <td>@student.Name</td>
              <td>@student.DateOfBirth</td>
              @{
                    string str = "";
                    switch (student.Branch)
                    {
                        case Branch.IT:
                            str = "CNTT";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.CE:
                            str = "Công trình";

                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
               
              <td>@str</td>
              <td>@(student.Gender == Gender.Female ? "Nữ" : "Nam")</td>
              <td>@student.Address</td>
              <td>@student.Email</td>
              <td>@student.Point</td>
            </tr>
        }
  </tbody>
</table>